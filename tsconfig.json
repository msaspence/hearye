{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@hearye/api": ["apps/api/src"],
      "@hearye/api/*": ["apps/api/src/*"],
      "@hearye/db": ["packages/db/src"],
      "@hearye/db/*": ["packages/db/src/*"],
      "@hearye/env": ["packages/env/src"],
      "@hearye/env/*": ["packages/env/src/*"],
      "@hearye/logger": ["packages/logger/src"],
      "@hearye/logger/*": ["packages/logger/src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
